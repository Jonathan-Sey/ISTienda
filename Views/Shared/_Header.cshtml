@using System.Security.Claims

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid mx-5">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Tienda</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" id="navbarSupportedContent">
                    <form  class="form-inline mx-auto" asp-controller="Home" asp-action="Productos"  method="get">
                        <div class="input-group">
                            <input class="form-control" type="search" placeholder="Buscar Productos" aria-label="Buscar"
                            name="busqueda"/>
                            <button class="btn btn-outline-secundary" type="submit">
                                <i class="fa-solid fa-magnifying-glass"></i>
                            </button>
                        </div>
                    </form>
                    
                    <ul class="navbar-nav flex-grow-1">
                        @*Definicion de carrito *@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Carrito" asp-action="Index">
                                <i class="fa-solid fa-cart-shopping"></i>
                                <span class="badge bardge-pill badge=danger bg-primary">
                                    @ViewBag.NumeroProductos
                                </span>
                            </a>
                        </li>
                        @if (User.Identity !=null && User.Identity.IsAuthenticated)
                        {
                            string nombreUsuario=User.Identity.Name ?? "Desconocido";
                            string idUsuario = 
                            User.FindFirstValue(ClaimTypes.NameIdentifier);
                                                          
                               <li class="nav-item dropdown">

                                <a  class="nav-link dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa-regular fa-user">@nombreUsuario</i>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dorpdown-item" asp-controller="Perfil" asp-action="Details"
                                    asp-route-id="@idUsuario">Perfil</a></li>
                                <!-- validacion de roles-->
                                    
                                @if (User.FindFirstValue(ClaimTypes.Role) == "Administrador")
                                {
                                    <li><a class="dorpdown-item" asp-controller="Dashboard" asp-action="Index"
                                    >Dashboard</a></li>
                                }
                                    

                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Cerrar Sesi√≥n</a></li>

                                </ul>
                                </li>
                        }else
                        {
                            <li class="nav-item">
                            <a  class="nav-link" asp-controller="Account" asp-action="Login">
                               <i class="fa-regular fa-user"></i>
                            </a> 

                            </li>
                        }



                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>